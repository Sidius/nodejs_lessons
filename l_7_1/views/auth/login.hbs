<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Login</a></li>
                <li class="tab col s6"><a href="#register">Register</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">

            {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}

            <h2>Login to shop</h2>
            <form action="/auth/login" method="post">
                <div class="input-field">
                    <input name="email" id="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Type email"></span>
                </div>
                <div class="input-field">
                    <input name="password" id="password" type="password" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Type password"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">

            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}

            <h2>Register to shop</h2>
            <form action="/auth/register" method="post" novalidate>
                <div class="input-field">
                    <input name="email" id="remail" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Type email"></span>
                </div>
                <div class="input-field">
                    <input name="password" id="rpassword" type="password" class="validate" required>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Type password"></span>
                </div>
                <div class="input-field">
                    <input name="confirm" id="confirm" type="password" class="validate" required>
                    <label for="confirm">Repeat password</label>
                    <span class="helper-text" data-error="Type password"></span>
                </div>
                <div class="input-field">
                    <input name="name" id="name" type="text" class="validate" required>
                    <label for="name">Name</label>
                    <span class="helper-text" data-error="Type name"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>
